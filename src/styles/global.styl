@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;600&family=Montserrat:wght@400;500;700&family=Open+Sans&display=swap');

$liColor = #0073aa
$liHoverColor = #005177

body 
  font-family: Montserrat
  margin 0
  padding 0
  ul 
    li
      list-style none
    a
      text-decoration none
      color $liColor
      &:hover
        color $liHoverColor
  table
    border-collapse: collapse
    th
    td
      border 1px solid grey
      padding: 10px